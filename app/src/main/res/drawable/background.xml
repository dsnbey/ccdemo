<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Default state -->
    <item>
<shape android:shape="rectangle">
    <solid android:color="@color/default_background_color"/>
    <corners android:radius="8dp"/>
    <stroke android:color="@color/default_stroke_color" android:width="2dp"/>
</shape>
</item>

    <!-- Pressed state -->
<item android:state_pressed="true">
<shape android:shape="rectangle">
    <solid android:color="@color/pressed_background_color"/>
    <corners android:radius="8dp"/>
    <stroke android:color="@color/pressed_stroke_color" android:width="2dp"/>
</shape>
</item>

    <!-- Focused state -->
<item android:state_focused="true">
<shape android:shape="rectangle">
    <solid android:color="@color/focused_background_color"/>
    <corners android:radius="8dp"/>
    <stroke android:color="@color/fragment_card_soft" android:width="2dp"/>
</shape>
</item>
    </selector>